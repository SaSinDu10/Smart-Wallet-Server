{
    "compilerOptions": {
        "outDir": "js",
        "rootDir": "ts",
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "skipLibCheck": true,
        "allowJs": false,
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "downlevelIteration": false,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "removeComments": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "noImplicitReturns": true
    }
}